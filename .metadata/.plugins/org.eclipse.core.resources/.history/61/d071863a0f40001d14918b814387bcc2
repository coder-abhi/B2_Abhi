package com.acts.matrixTester;
import com.acts.matrix.MatrixMethods;
import com.acts.matrix.AdditionMatrix;
public class AdditionMatrixTester {

	public static void main(String[] args) {
		
		int arr[][] = MatrixMethods.CreateMatrix(3, 3);
		
		int arr2[][] = MatrixMethods.CreateMatrix(3, 3);
		
		
		MatrixMethods.PrintMatrix(arr, 3);
		MatrixMethods.PrintMatrix(arr2, 3);
		
		int additionMatrix[][] = AdditionMatrix.add(arr, arr2, 3);
		System.out.println("Addition of Matrix will be : ");
		MatrixMethods.PrintMatrix(additionMatrix, 3);

	}

}

/*
11 10 10
9 5 5
10 20 20

1 1 1
2 2 2
3 3 3
 */
