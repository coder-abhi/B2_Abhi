package com.acts.strings;

public class EmailValidation {
	public boolean  CheckEmail(String input) {
		if(null == input || input.isBlank() || input.isEmpty()) return false;
		if(input.length() <= 10) return false;
		if(input.indexOf("@") != input.lastIndexOf("@")) return false;
		if(input.indexOf("@") > input.indexOf(".")) return false;
		if(input.indexOf(".") - input.indexOf("@") >= 3 ) return false;
		if()
		return true;
	}
}
